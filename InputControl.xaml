<UserControl x:Class="ConversionCalc.InputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ConversionCalc"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBox x:Name="InputValue" Grid.Row="0" Background="Black" Foreground="White" FontSize="25" TextAlignment="Center" TextChanged="InputTextChanged"/>
        <ComboBox x:Name="Units" Grid.Row="1" FontSize="20" SelectionChanged="InputSelectionChanged"/>
    </Grid>
</UserControl>
